# pfl-forge.yaml — リポジトリルートに配置して pfl-forge を実行
test_command: "just test"
docker_required: true
base_branch: main
extra_tools: []

settings:
  parallel_workers: 4
  models:
    triage: haiku
    triage_deep: sonnet
    default: sonnet
    complex: opus
  worker_tools:
    - Bash
    - Read
    - Write
    - Edit
    - Glob
    - Grep
  triage_tools:
    - Read
    - Glob
    - Grep
  poll_interval_secs: 300
  worktree_dir: .pfl-worktrees
  state_file: ~/.pfl-forge/state.yaml
  worker_timeout_secs: 1200
  triage_timeout_secs: 600

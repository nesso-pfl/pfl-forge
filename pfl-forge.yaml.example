# pfl-forge.yaml — リポジトリルートに配置して pfl-forge を実行
base_branch: main
parallel_workers: 4
models:
  analyze: sonnet
  default: sonnet
  complex: opus
worker_tools:
  - Bash
  - Read
  - Write
  - Edit
  - Glob
  - Grep
analyze_tools:
  - Read
  - Glob
  - Grep
poll_interval_secs: 300
worktree_dir: .pfl-worktrees
worker_timeout_secs: 1200
analyze_timeout_secs: 600
